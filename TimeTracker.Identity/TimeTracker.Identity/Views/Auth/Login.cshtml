@model LoginViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href=@Url.Content("~/styles/app.css") rel="stylesheet" type="text/css" />
    <title>Login</title>
</head>
<body>
    <form asp-controller="Auth" asp-action="Login" method="post" class="auth-form">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="header">Login</div>
        <div class="block">
            <div class="input-block">
                <label>Username</label>
                <input asp-for="Username" class="input" />
            </div>
            <span asp-validation-for="Username"></span>
        </div>
        <div class="block">
            <div class="input-block">
                <label>Password</label>
                <input asp-for="Password" class="input" />
            </div>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="block">
            <button type="submit" class="button">Sign In</button>
        </div>
        <a asp-controller="Auth" asp-action="Register"
           asp-route-returnUrl="@Model.ReturnUrl" class="switch-button">Register</a>
    </form>
</body>
</html>
